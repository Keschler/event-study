{
  "scrape": {
    "username": "trump_repost",
    "max_posts": 500,
    "sleep_s": 1.0,
    "retries": 4,
    "page_size": 40,
    "min_request_interval_s": 2.5,
    "max_wait_s": 3600,
    "max_rate_limit_hits": 5,
    "cookies_path": "src/cookies.json",
    "skip": false
  },
  "paths": {
    "raw_dir": "src/raw",
    "processed_dir": "src/processed",
    "outputs_dir": "src/outputs"
  },
  "market": {
    "benchmark": "^GSPC",
    "symbols": ["TSLA", "AAPL"],
    "bar_interval": "1h"
  },
  "event": {
    "event_window": [-1, 1],
    "estimation_window": [-120, -21],
    "market_tz": "US/Eastern",
    "open_time": "09:30",
    "close_time": "16:00",
    "min_est_days": 30
  }
}
